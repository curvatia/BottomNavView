<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottomnavview.ui.home.HomeFragment"
        android:label="Multiverso Explorer"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.bottomnavview.ui.dashboard.DashboardFragment"
        android:label="Mis Viajes"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_favoritos"
        android:name="com.example.bottomnavview.ui.notifications.NotificationsFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_ajustes"
        android:name="com.example.bottomnavview.ui.ajustes.AjustesFragment"
        android:label="Ajustes"
        tools:layout="@layout/fragment_ajustes" />
</navigation>